#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    combos {
        compatible = "zmk,combos";

        C_LHOME {
            bindings = <&kp HOME>;
            key-positions = <1 13>;
            slow-release;
        };

        C_LDELETE {
            bindings = <&kp DELETE>;
            key-positions = <2 14>;
            slow-release;
        };

        C_LINS {
            bindings = <&kp INSERT>;
            key-positions = <3 15>;
            slow-release;
        };

        C_LEND {
            bindings = <&kp END>;
            key-positions = <4 16>;
            slow-release;
        };

        C_LGUI {
            bindings = <&kp LEFT_GUI>;
            key-positions = <13 25>;
            slow-release;
        };

        C_LALT {
            bindings = <&kp LALT>;
            key-positions = <14 26>;
            slow-release;
        };

        C_LCTRL {
            bindings = <&kp LCTRL>;
            key-positions = <15 27>;
            slow-release;
        };

        C_LSHIFT {
            bindings = <&kp LEFT_SHIFT>;
            key-positions = <16 28>;
            slow-release;
        };

        C_RLEFT {
            bindings = <&kp LEFT>;
            key-positions = <7 19>;
            slow-release;
        };

        C_RDOWN {
            bindings = <&kp DOWN_ARROW>;
            key-positions = <8 20>;
            slow-release;
        };

        C_RUP {
            bindings = <&kp UP_ARROW>;
            key-positions = <9 21>;
            slow-release;
        };

        C_RRIGHT {
            bindings = <&kp RIGHT>;
            key-positions = <10 22>;
            slow-release;
        };

        C_RSHIFT {
            bindings = <&kp RIGHT_SHIFT>;
            key-positions = <19 31>;
            slow-release;
        };

        C_RCTRL {
            bindings = <&kp RIGHT_CONTROL>;
            key-positions = <20 32>;
            slow-release;
        };

        C_RALT {
            bindings = <&kp RALT>;
            key-positions = <21 33>;
            slow-release;
        };

        C_RWIN {
            bindings = <&kp RWIN>;
            key-positions = <22 34>;
            slow-release;
        };

        C_TO_next1 {
            bindings = <&to 1>;
            key-positions = <38 39>;
            layers = <0>;
        };

        C_TO_0 {
            bindings = <&to 0>;
            key-positions = <37 40>;
        };

        C_TO_next2 {
            bindings = <&to 2>;
            key-positions = <38 39>;
            layers = <1>;
        };

        C_TO_previous1 {
            bindings = <&to 1>;
            key-positions = <38 39>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            label = "Base";
            bindings = <
&kp ESCAPE  &kp Q  &kp W       &kp E      &kp R  &kp T    &kp Y      &kp U          &kp I    &kp O     &kp P  &kp BACKSPACE
   &kp TAB  &kp A  &kp S       &kp D      &kp F  &kp G    &kp H      &kp J          &kp K    &kp L  &kp SEMI        &kp SQT
 &kp GRAVE  &kp Z  &kp X       &kp C      &kp V  &kp B    &kp N      &kp M      &kp COMMA  &kp DOT  &kp FSLH  &kp BACKSLASH
                          &kp DELETE  &kp SPACE  &mo 1    &mo 2  &kp ENTER  &kp BACKSPACE
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            label = "Lower";
            bindings = <
             &none        &kp F1        &kp F2        &kp F3        &kp F4        &kp F5          &kp F6        &kp F7        &kp F8            &kp F9            &kp F10         &trans
             &none  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5    &kp NUMBER_6  &kp NUMBER_7  &kp NUMBER_8      &kp NUMBER_9       &kp NUMBER_0    &kp PAGE_UP
&kp K_CONTEXT_MENU       &kp F11       &kp F12         &none         &none         &none           &none     &kp MINUS     &kp EQUAL  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp PAGE_DOWN
                                                      &trans        &trans        &trans          &trans        &trans        &trans
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            label = "Raise";
            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2      &bt BT_SEL 3  &bt BT_SEL 4     &kp KP_NUMLOCK  &kp KP_N7  &kp KP_N8  &kp KP_N9   &kp PRINTSCREEN  &kp PAUSE_BREAK
&kp K_MUTE  &kp C_VOL_DN  &kp C_VOL_UP    &kp K_PREV  &kp K_PLAY_PAUSE    &kp K_NEXT    &kp KP_NUMBER_0  &kp KP_N4  &kp KP_N5  &kp KP_N6  &kp K_CALCULATOR   &kp SCROLLLOCK
     &none         &none         &none         &none             &none         &none          &kp KP_N0  &kp KP_N1  &kp KP_N2  &kp KP_N3             &none     &kp CAPSLOCK
                                              &trans            &trans        &trans             &trans     &trans     &trans
            >;
        };
    };
};
